<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/dayTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:text="MONDAY"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/chanceOfRainTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dayTV"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        tools:text="25%"
        android:textColor="@color/darker_gray"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

        <ImageView
            android:id="@+id/rainIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@id/chanceOfRainTV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_rainy"
            />

    <ImageView
        android:id="@+id/imageIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/sunrise"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rainIV"
        android:layout_marginStart="40dp"
        />

    <TextView
        android:id="@+id/avgMaxMinTempTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        tools:text="36/10"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:textAppearance="@style/ThemeOverlay.AppCompat.Light"
        android:textColor="@color/white"
        />

</RelativeLayout>